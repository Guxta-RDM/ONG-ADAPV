<script src="/js/listar/adocao.js"></script>

<h1>Adoções Registradas</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/adocao/cadastrar">Nova Adoção</a>
<hr>
    <div>
        <table class="table table-striped">
            <thead>
                <th>Id</th>
                <th>Id do Adotante</th>
                <th>Id do Animal</th>
                <th>Data de Registro</th>
                <th>Data de Atualização</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < listaAdocao.length; i++)  { %>
                    <tr>
                        <td><%= listaAdocao[i].ado_id %></td>
                        <td><%= listaAdocao[i].pess_id %></td>
                        <td><%= listaAdocao[i].ani_id %></td>
                        <td><%= listaAdocao[i].createdAt %></td>
                        <td><%= listaAdocao[i].updatedAt %></td>
                        <td>
                            <a href="/adocao/alterar/<%= listaAdocao[i].ado_id %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button data-codigoexclusao="<%= listaAdocao[i].ado_id %>" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>