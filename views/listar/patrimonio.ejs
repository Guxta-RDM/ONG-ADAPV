<script src="/js/listar/patrimonio.js"></script>

<h1>Patrimonios Registrados</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/patrimonio/cadastrar">Novo Patrimonio</a>
<hr>
<div>
    <table class="table table-striped">
        <thead>
            <th>Id</th>
            <th>Valor adicionado</th>
            <th>Doador</th>
            <th>Registro criado</th>
            <th>Registro atualizado</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < listaPatrim.length; i++) { %>
                <tr>
                    <td><%= listaPatrim[i].patrim_id %></td>
                    <td><%= listaPatrim[i].patrim_saldo %></td>
                    <td><%= listaPatrim[i].doa_id %></td>
                    <td><%= listaPatrim[i].createdAt %></td>
                    <td><%= listaPatrim[i].updatedAt %></td>

                    <td>
                        <a href="/patrimonio/alterar/<%= listaPatrim[i].patrim_id %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <button data-codigoexclusao="<%= listaPatrim[i].patrim_id %>" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>