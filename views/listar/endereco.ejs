<script src="/js/listar/endereco.js"></script>

<h1>Endereços Cadastrados</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/endereco/cadastrar">Novo Endereço</a>
<hr>
    <div>

        <table class="table table-striped">
            <thead>
                <th>Id</th>
                <th>CEP</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>Numero</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Complemento</th>
                <th>Id pessoa</th>
                <th>createdAt</th>
                <th>updatedAt</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < listaEndereco.length; i++) { %>
                    <tr>
                        <td><%= listaEndereco[i].end_id %></td>
                        <td><%= listaEndereco[i].end_cep %></td>
                        <td><%= listaEndereco[i].end_rua %></td>
                        <td><%= listaEndereco[i].end_bairro %></td>
                        <td><%= listaEndereco[i].end_numero %></td>
                        <td><%= listaEndereco[i].end_cidade %></td>
                        <td><%= listaEndereco[i].end_estado %></td>
                        <td><%= listaEndereco[i].end_complemento %></td>
                        <td><%= listaEndereco[i].pess_id %></td>
                        <td><%= listaEndereco[i].createdAt %></td>
                        <td><%= listaEndereco[i].updatedAt %></td>
                        <td>
                            <a href="/endereco/alterar/<%= listaEndereco[i].end_id %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button data-codigoexclusao="<%= listaEndereco[i].end_id %>" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                        </td>
                        
                    </tr>
                <% } %>
            </tbody>
        </table>

    </div>