<script src="/js/listar/animais.js"></script>

<h1>Animais cadastrados</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/animais/cadastrar">Novo Animal</a>
<hr>
    <div>
        <table class="table table-striped">
            <thead>
                <th>Id</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Raça</th>
                <th>Sexo</th>
                <th>Especie</th>
                <th>Pelagem</th>
                <th>Esterilização</th>
                <th>Estado</th>
                <th>Registro criado</th>
                <th>Registro atualizado</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < lista.length; i++)  { %>
                    <tr>
                        <td><%= lista[i].ani_id %></td>
                        <td><%= lista[i].ani_nome %></td>
                        <td><%= lista[i].ani_nascimento %></td>
                        <td><%= lista[i].ani_raça %></td>
                        <td><%= lista[i].ani_sexo %></td>
                        <td><%= lista[i].ani_especie %></td>
                        <td><%= lista[i].ani_pelagem %></td>
                        <td><%= lista[i].ani_ester %></td>
                        <td><%= lista[i].ani_estado %></td>
                        <td><%= lista[i].createdAt %></td>
                        <td><%= lista[i].updatedAt %></td>
                        <td>
                            <a href="/animais/alterar/<%= lista[i].ani_id %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button data-codigoexclusao="<%= lista[i].ani_id %>" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
