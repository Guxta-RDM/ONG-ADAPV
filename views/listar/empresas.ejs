<script src="/js/listar/empresas.js"></script>

<h1>Empresas Cadastrados</h1>
<a class="btn btn-secondary" style="max-width: 200px;" href="/empresas/cadastrar">Nova empresa</a>
<hr>
    <div>

        <table class="table table-striped">
            <thead>
                <th>Id</th>
                <th>Nome da empresa</th>
                <th>CNPJ</th>
                <th>CEP</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>Numero</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Complemento</th>
                <th>Telefone</th>
                <th>createdAt</th>
                <th>updatedAt</th>
            </thead>
            <tbody>
                <% for (let i = 0; i < listaEmpresas.length; i++) { %>
                    <tr>
                        <td><%= listaEmpresas[i].emp_id %></td>
                        <td><%= listaEmpresas[i].emp_nome %></td>
                        <td><%= listaEmpresas[i].emp_cnpj %></td>
                        <td><%= listaEmpresas[i].emp_cep %></td>
                        <td><%= listaEmpresas[i].emp_rua %></td>
                        <td><%= listaEmpresas[i].emp_bairro %></td>
                        <td><%= listaEmpresas[i].emp_num %></td>
                        <td><%= listaEmpresas[i].emp_cidade %></td>
                        <td><%= listaEmpresas[i].emp_estado %></td>
                        <td><%= listaEmpresas[i].emp_complemento %></td>
                        <td><%= listaEmpresas[i].emp_telefone %></td>
                        <td><%= listaEmpresas[i].createdAt %></td>
                        <td><%= listaEmpresas[i].updatedAt %></td>
                        <td>
                            <a href="/empresas/alterar/<%= listaEmpresas[i].emp_id %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <button data-codigoexclusao="<%= listaEmpresas[i].emp_id %>" class="btn btn-danger btnExclusao"><i class="fas fa-trash"></i></button>
                        </td>
                        
                    </tr>
                <% } %>
            </tbody>
        </table>

    </div>