<script src="/js/cadastrar/doacoes.js"></script>
<div class="container">
    <div class="container-fluid">

     <h1 class="h3 mb-4 text-gray-800">Cadastrar Doação</h1>
        <div>
            <% if (typeof msg != "undefined") { %>             
                <span  ><%= msg %></span>
            <% } %>
        </div>   

        <div class="col-md-4">
            <label for="doa_tipo" class="form-label">Tipo de doação<span class="text-danger">*</span></label>
            <select name="doa_tipo" id="doa_tipo" class="form-control">
                <option value="">Selecione...</option>
                <option value="Dinheiro">Dinheiro</option>
                <option value="Produto">Produto</option>
            </select>
        </div>
        
        <div class="col-md-8">
            <label for="doa_desc" class="form-label">Descrição<span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="doa_desc" name="doa_desc" placeholder="Digite a descrição da doação">
        </div>
        
        <div class="col-md-4">
            <label for="doa_qnt" class="form-label">Quantidade<span class="text-danger">*</span></label>
            <input type="number" step="0.01" class="form-control" id="doa_qnt" name="doa_qnt" placeholder="Digite a quantidade">
        </div>
        
        <div class="col-md-4">
            <label for="doa_doador" class="form-label">Doador</label>
            <input type="text" class="form-control" id="doa_doador" name="doa_doador" placeholder="Digite o nome do doador">
        </div>
        
        <div class="col-md-4">
            <label for="doa_cpf_cnpj" class="form-label">CPF/CNPJ</label>
            <input type="text" class="form-control" id="doa_cpf_cnpj" name="doa_cpf_cnpj" placeholder="Digite o CPF ou CNPJ">
        </div>
        
        <div class="col-md-4">
            <label for="doa_rg" class="form-label">RG</label>
            <input type="text" class="form-control" id="doa_rg" name="doa_rg" placeholder="Digite o RG">
        </div>
        
        <div class="col-md-4">
            <label for="doa_data" class="form-label">Data<span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="doa_data" name="doa_data">
        </div>

        <div class="col-md-6">
            <label for="pess_id" class="form-label">Pessoa<span class="text-danger">*</span></label>
            <select name="pess_id" id="pess_id" class="form-control">
                <option value="" selected>Selecione...</option>
                <% listaPessoa.forEach(function(pessoa) { %>
                    <option value="<%= pessoa.pess_id %>">NOME: <%= pessoa.pess_nome %> - CPF: <%= pessoa.pess_cpf%></option>
                <% }); %>
            </select>
        </div>

        <br><br>
        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnCadastrar">Salvar</button>
            <button type="button" class="btn btn-secondary px-3 py-3" id="cancelar">Cancelar</button>
        </div>
    </div>
</div>