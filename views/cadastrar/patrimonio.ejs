<script src="/js/cadastrar/patrimonio.js"></script>
<div class="container">
    <div class="container-fluid">

        <h1 class="h3 mb-4 text-gray-800">Cadastrar Patrimônio</h1>
        <% if (typeof msg != "undefined") { %>
            <span><%= msg %></span>
        <% } %>

        <div class="col-md-6">
            <label for="patrim_valor" class="form-label">Dinheiro<span class="text-danger">*</span></label>
            <input type="number" name="patrim_valor" class="form-control" id="patrim_valor" placeholder="Valor a ser adicionado ao patrimônio">
        </div>
        <div class="dropdown col-md-4 mt-2 p-2 bg-secondary-subtle rounded">
            <label for="" class="text-decoration-underline">Apenas use caso ocorra erro no registro automático de patromônio.</label>
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Cadastrar doação
            </button>
            
            <div class="dropdown-menu p-2">
                <label for="doa_id" class="form-label">Doação<span class="text-danger">*</span></label>
                <select name="doa_id" id="doa_id" class="form-select">
                    <option value="" selected disabled>Selecione...</option>
                    <% listaDoa.forEach(function(doacoes) { %>
                        <% isPessoa =  listaPessoa.find(pessoa => pessoa.pess_id === doacoes.pess_id)%>
                        <option value="<%= doacoes.doa_id %>"><%= doacoes.doa_id %> - NOME: <%= doacoes.doa_doador === null ? isPessoa.pess_nome : doacoes.doa_doador %> - CPF: <%= doacoes.doa_cpf_cnpj === null ? isPessoa.pess_cpf : doacoes.doa_cpf_cnpj %></option>
                    <% }); %>
                </select>
            </div>
        </div>

        <br>
        <br>

        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnCadastrar">Salvar</button>
            <button type="button" class="btn btn-secondary px-3 py-3" id="cancelar">Cancelar</button>
        </div>

    </div>
</div>