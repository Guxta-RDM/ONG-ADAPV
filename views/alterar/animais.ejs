<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/alterar/animais.js"></script>
<div class="container">
        <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Alterar Animal</h1>
        <div>
            <% if (typeof msg != "undefined") { %>             
                <span  ><%= msg %></span>
            <% } %>
        </div>
        <input id="id" hidden value="<%= animais.ani_id %>">
        <div class="col-md-6">
            <label for="nome" class="form-label">Nome<span class="text-danger">*</span></label>
            <input type="text" value="<%= animais.ani_nome%>" class="form-control" id="nome" name="nome" placeholder="Digite o nome do animal">
        </div>
        <div class="col-md-4">
            <label for="sexo" class="form-label">Sexo<span class="text-danger">*</span></label>
            <select id="sexo" class="form-select" name="sexo">
                <option value="" <%= animais.ani_sexo === "" ? "selected" : "" %>>Selecione...</option>
                <option value="Macho" <%= animais.ani_sexo === "Macho" ? "selected" : "" %>>Macho</option>
                <option value="Femea" <%= animais.ani_sexo === "Femea" ? "selected" : "" %>>Fêmea</option>
                <option value="Indefinido" <%= animais.ani_sexo === "Indefinido" ? "selected" : "" %>>Indefinido</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="ester" class="form-label">Esterilização<span class="text-danger">*</span></label>
            <select id="ester" class="form-select" name="ester">
                <option value="" <%= animais.ani_ester === "" ? "selected" : "" %>>Selecione...</option>
                <option value="Fertil" <%= animais.ani_ester === "Fertil" ? "selected" : "" %>>Fertil</option>
                <option value="Castrado" <%= animais.ani_ester === "Castrado" ? "selected" : "" %>>Castrado</option>
                <option value="Vasectomia" <%= animais.ani_ester === "Vasectomia" ? "selected" : "" %>>Vasectomia</option>                
            </select>
        </div>
        <div class="col-md-6">
            <label for="nome" class="form-label">Data de Nascimento<span class="text-danger">*</span></label>
            <input type="text" value="<%= animais.ani_nascimento%>" class="form-control" id="campoData" name="campoData" placeholder="aaaa-mm-dd">
        </div>
        <div class="col-md-4">
            <label for="especie" class="form-label">Espécie<span class="text-danger">*</span></label>
            <select id="especie" class="form-select" name="especie">
                <option value="" <%= animais.ani_especie === "" ? "selected" : "" %>>Selecione...</option>
                <option value="Canino" <%= animais.ani_especie === "Canino" ? "selected" : "" %>>Canino</option>
                <option value="Felino" <%= animais.ani_especie === "Felino" ? "selected" : "" %>>Felino</option>
                <option value="Outros" <%= animais.ani_especie === "Outros" ? "selected" : "" %>>Outros</option>                
            </select>
        </div>
        <div class="col-md-4">
            <label for="estado" class="form-label">Estado<span class="text-danger">*</span></label>
            <select id="estado" class="form-select" name="estado">
                <option value="" <%= animais.ani_estado === "" ? "selected" : "" %>>Selecione...</option>
                <option value="Habitando na ONG" <%= animais.ani_estado === "Habitando na ONG" ? "selected" : "" %>>Habitando na ONG</option>
                <option value="Solto" <%= animais.ani_estado === "Solto" ? "selected" : "" %>>Solto</option>
                <option value="Adotado" <%= animais.ani_estado === "Adotado" ? "selected" : "" %>>Adotado</option>                
            </select>
        </div>
        <div class="col-md-4">
            <label for="raca" class="form-label">Raça<span class="text-danger">*</span></label>
            <select id="raca" class="form-select" name="raca">
                <option style="color: gray;" disabled>=====Canino=====</option>
                <option value="" <%= animais.ani_raça === "" ? "selected" : "" %>>Selecione...</option>
                <%
                var racasCaninas = [
                "Akita", "Beagle", "Bichon Frise", "Bulldog", "Chihuahua", "Cocker Spaniel", "Dachshund", "Golden Retriever", 
                "Labrador Retriever", "Lhasa Apso", "Maltese", "Poodle", "Pug", "Rottweiler", "Shih Tzu", "Vizsla", "Weimaraner", 
                "Yorkshire Terrier"

                ];
                
                for (var i = 0; i < racasCaninas.length; i++) {
                    var raca = racasCaninas[i];
                %>
                <option value="<%= raca %>" <%= animais.ani_raça === raca ? "selected" : "" %>><%= raca %></option>
                <%
                }
                %>
                
                <option style="color: gray;" disabled>=====Felino=====</option>
                <%
                var racasFelinas = [
                "Abyssinian", "American Bobtail", "American Curl", "American Shorthair", "American Wirehair", "Balinese", "Bengal", 
                "Birman", "British Shorthair", "Burmese", "Chartreux", "Colorpoint Shorthair", "Cornish Rex", "Devon Rex", 
                "Egyptian Mau", "European Burmese", "Exotic Shorthair", "Havana Brown", "Himalayan", "Japanese Bobtail", "Javanese", 
                "Korat", "Maine Coon", "Manx", "Norwegian Forest Cat", "Ocicat", "Oriental", "Persian", "Ragamuffin", "Ragdoll", 
                "Russian Blue", "Scottish Fold", "Selkirk Rex", "Siamese", "Siberian", "Singapura", "Somali", "Sphynx", "Tonkinese", 
                "Turkish Angora", "Turkish Van"

                ];
                
                for (var j = 0; j < racasFelinas.length; j++) {
                    var racaFelina = racasFelinas[j];
                %>
                <option value="<%= racaFelina %>" <%= animais.ani_raça === racaFelina ? "selected" : "" %>><%= racaFelina %></option>
                <%
                }
                %>
                         
            </select>
        </div>
        <div class="col-md-4">
            <label for="pelagem" class="form-label">Pelagem<span class="text-danger">*</span></label>
            <select class="form-select" name="pelagem" id="pelagem">
                <option value="" <%= animais.ani_pelagem === "" ? "selected" : "" %>>Selecione...</option>
                <%
                var opcoesPelagem = ["Amarelo", "Preto c/ Branco", "Azul", "Branco", "Caramelo", "Preto c/ Branco", "Caramelo c/ Branco", "Cinza", "Vermelho", "Marrom"];

                opcoesPelagem.forEach(function(pelagem) {
                %>
                <option value="<%= pelagem %>" <%= animais.ani_pelagem === pelagem ? "selected" : "" %>><%= pelagem %></option>
                <%
                });
                %>

            </select>
        </div>
        <br><br>
        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnAlterar">Alterar</button>
            <a class="btn btn-secondary px-3 py-3" href="/">Cancelar</a>

        </div>

    </div> 

</div>